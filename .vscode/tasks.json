{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "pack",
      "type": "shell",
      "command": [
        "mkdir -p mods;",
        "rm -r mods/${workspaceFolderBasename};",
        "mkdir mods/${workspaceFolderBasename};",
        "cp -r resources/* mods/${workspaceFolderBasename}"
      ],
      "presentation": {
        "reveal": "silent"
      },
      "problemMatcher": []
    },
    {
      "label": "pack-release",
      "dependsOn": "build (Debug)",
      "type": "shell",
      "command": [
        "mkdir -p releases;",
        "git archive",
        "-o releases/${workspaceFolderBasename}_v${config:vsversion}_last.zip",
        "--add-file=mods/${workspaceFolderBasename}/${workspaceFolderBasename}.dll",
        "--add-file=mods/${workspaceFolderBasename}/${workspaceFolderBasename}.pdb",
        "\"HEAD:resources\""
      ],
      "presentation": {
        "reveal": "silent"
      },
      "problemMatcher": []
    },
    {
      "label": "build (Debug)",
      "dependsOn": "pack",
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "presentation": {
        "reveal": "silent"
      },
      "problemMatcher": "$msCompile",
      "type": "shell",
      "command": "dotnet",
      "linux": {
        "options": {
          "env": {
            "FrameworkPathOverride": "/lib/mono/4.5.2-api/"
          }
        }
      },
      "args": ["build", "-c", "Debug"]
    }
  ]
}
